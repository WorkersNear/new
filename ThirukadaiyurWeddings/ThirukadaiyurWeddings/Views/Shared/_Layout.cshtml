</head>

<body>
    <div id="loader" style="display:block;"></div>
    <div id="overlay" style="display:block;"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Thirukadaiyur Temple", "Thirukadaiyur_Temple", "Thirukadaiyur", new { area = "" }, new { @class = "navbar-brand" })               
            </div>
          
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                  
                    <li>@Html.ActionLink("Marriages & Pooja's", "Thirukadaiyur_Temple_Details_Cost", "Thirukadaiyur")</li>
                    <li>@Html.ActionLink("Aayush Homams", "Aayush_Homams_in_Thirukadaiyur", "Thirukadaiyur")</li>
                    <li>@Html.ActionLink("Hotels & Rooms", "Hotels_Rooms_Food_in_Thirukadaiyur", "Thirukadaiyur")</li>                    
                    <li>@Html.ActionLink("Online Booking", "Thirukadaiyur_Temple_Booking", "Thirukadaiyur")</li>
                    <li>@Html.ActionLink("Help & Enquiry?", "Thirukadaiyur_Temple_Contact_Details", "Thirukadaiyur")</li>

                </ul>
                
            </div>          
            
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>
                &copy; @DateTime.Now.Year - Abirami Arrangements
                
            </p>
            <a href="https://www.facebook.com/AbiramiArrangements" target="_blank" > <i class="fa fa-facebook" aria-hidden="true" style="font-size: 25px;color: darkblue;cursor: pointer;" title="Visit Us on Facebook!"></i></a>&nbsp;&nbsp;&nbsp;
            <a href="https://twitter.com/AbiramiArrange1" target="_blank"> <i class="fa fa-twitter" aria-hidden="true" style="font-size: 25px;color: darkblue;cursor: pointer;" title="Visit Us on Twitter!"></i></a>
        </footer>
        
        
    </div>    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    window.addEventListener('load', function () {

        hideProgress();

    }, false);
    function showProgress() {
        $("#loader").css("display", "block");
        $("#overlay").css("display", "block");
    }
    function hideProgress() {
        $("#loader").css("display", "none");
        $("#overlay").css("display", "none");
    }
</script>



