<div class="row">
    <div class="col-md-6">
        <div class="jumbotron" id="map" style="margin-top: 15px; height:500px;width:auto">
           

        </div>
    </div>
    <div class="col-md-6" style="    margin-top: 62px;">

        <form action="/Thirukadaiyur/Thirukadaiyur_Temple_Contact_Details_Enquiry" id="Enquiry" method="post">
            
                <div class="row form-group">
                    <div class="col-md-12">
                        <label for="mrname">Name</label>
                        <input type="text" id="Name" name="Name" class="form-control" placeholder="type your name">
                    </div>
                </div>                
                <div class="row form-group">
                    <div class="col-md-12">
                        <label for="mobile">Contact Number</label>
                        <input type="number"  id="mobile" name="mobile" class="form-control required customphone" placeholder="enter your mobile no ">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label for="fdate">Address</label>
                        <textarea type="" id="address" name="address" class="form-control" placeholder="your address"></textarea>
                    </div>
                </div>
                                  
            <input type="submit" class="btn btn-default" value="Call Me!" />

        </form>
        <br /><br />

        <address>
            One Microsoft Way<br />
            Redmond, WA 98052-6399<br />
